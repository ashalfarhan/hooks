{
  "name": "@ashalfarhan/hooks",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "author": "ashalfarhan",
  "module": "dist/hooks.esm.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "http://github.com/ashalfarhan/hooks.git"
  },
  "keywords": [
    "react",
    "react-hooks",
    "hooks",
    "use-scroll",
    "useScroll",
    "use-fetch",
    "useFetch",
    "useToggle",
    "use-toggle"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test:unit": "tsdx test --passWithNoTests",
    "test:e2e": "cypress run",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/hooks.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/hooks.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "^13.1.9",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "cypress": "^7.7.0",
    "husky": "^7.0.1",
    "jest-fetch-mock": "^3.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^5.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  }
}
