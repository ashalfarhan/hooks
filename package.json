{
  "name": "@ashalfarhan/hooks",
  "version": "0.2.2",
  "license": "MIT",
  "main": "dist/index.js",
  "author": "ashalfarhan",
  "module": "dist/hooks.esm.js",
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "http://github.com/ashalfarhan/hooks.git"
  },
  "keywords": [
    "react",
    "react-hooks",
    "hooks",
    "useToggle",
    "use-toggle"
  ],
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "test:ci": "tsdx test --ci --coverage --verbose",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/hooks.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/hooks.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^6.0.4",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "husky": "^7.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^6.0.4",
    "ts-jest": "^27.0.7",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  }
}
